<div id="contribute">
	<div class="contennt">
		<h1>Edit <%= resource_name.to_s.humanize %></h1>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true, :method => :put }) do |f| %>
		  <%= devise_error_messages! %>

		  <p><%= f.label :name %><br />
		  <%= f.text_field :name, :class => 'big_input' %></p>
		
		
		  <p><%= f.label :email %><br />
		  <%= f.text_field :email, :class => 'big_input' %></p>

		  <p><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
		  <%= f.password_field :password, :class => 'big_input' %></p>

		  <p><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, :class => 'big_input' %></p>

		  <p><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
		  <%= f.password_field :current_password, :class => 'big_input' %></p>

		  <p>  <%= f.file_field :picture %></p>

		<% if current_user.picture_file_name.blank? %>
				<%= image_tag('missing.png')%>
		<% else %>
				<%= image_tag(current_user.picture(:small))%>
		<% end %>


		  <p><%= f.submit "Update" %></p>
		<% end %>

		<h3>Cancel my account</h3>

		<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

		<%= link_to "Back", :back %>
	
		
	</div>
</div>