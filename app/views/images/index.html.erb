<div id="contribute">
	






		<h1>
			ACC Word: <%=  @word.english.capitalize  %>  | <%= link_to "Add your image", new_word_image_path(@word)%>
		</h1>

	<div id="successful_submissions">
			<div class="content">


	
	
		
	
		
			<% if @word.images.blank? %>
				<h3>
					<span class="highlight">
						This word needs an image in order to be included in Free ACC
					</span>
				</h3>
			<% else %>

<table>
		
		  <tr>
		    <td>
				<div class="vote_count">
				<%= link_to(image_tag('upvote.png'), upvote_image_path(@word.images.first), :method => :put) %> <br/>
			
					<%= @word.images.first.votes %> <br/>

				<%= link_to(image_tag('downvote.png'), downvote_image_path(@word.images.first), :method => :put) %>
				</div>
			</td>	
		    <td><%= image_tag(@word.images.first.picture(:medium), :size => '200x200') %></td>

		    <td><%= image_tag('missing.png')%> 
			
			</td>
			
			 <td>

			    <td>
					<p><b>Artist:</b> Anonymous<br/>
				<b>Added:</b> <%= @word.images.first.created_at %></p> 

				</td>

		  </tr>
		
		</table>
<hr/>

	<table>
		
	

	<% @word.images.each do |image| %>
	<% unless @word.images.first == image %>
	  <tr style="background-color:<%= cycle('#EBDDE2', 'white')%>">
	    <td>
			<div class="vote_count">
			<%= link_to(image_tag('upvote.png'), upvote_image_path(image), :method => :put) %> <br/>
				<%= image.votes%> <br/>
			<%= link_to(image_tag('downvote.png'), downvote_image_path(image), :method => :put) %>
			</div>
		</td>	
	    <td><%= image_tag(image.picture(:medium), :size => '200x200') %></td>

	    <td><%= image_tag('missing.png')%> <br/>
		
		</td>
		<td>
		<p><b>Artist:</b> Anonymous <br/>
		<b>Added:</b><%= image.created_at %></p>
		
		</td>
	    

	  </tr>
	<% end %>
	<% end %>
	</table>
	<% end %>
	</div>
	</div>


</div>